{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES6", "DOM", "es2017"],
    "typeRoots": ["./src/@types"],
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "newLine": "lf",
    "declarationMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "sourceMap": false
}
